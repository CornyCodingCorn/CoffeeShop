
<div class="toggle-group">
    @for (var i = 0; i < Items.Length; i++)
    {
        var index = i;
        var item = Items[index];
        
        <ToggleButton Text="@item.Name"
                      OnClickCallback=@( _ => OnToggle(item, index) )
                      IsToggled="@IsToggled(index)">
        </ToggleButton>
    }
</div>

@code {

    public class Item
    {
        public string Name { get; init; } = string.Empty;
        public Action<string> Toggled { get; init; } = default!;
    }

    [Parameter]
    public Item[] Items { get; set; } = default!;
    [Parameter]
    public int SelectedIndex { get; set; }
    [Parameter]
    public EventCallback<int> SelectedIndexChanged { get; set; }

    private async void OnToggle(Item item, int index)
    {
        var isNewValue = index != SelectedIndex;
        SelectedIndex = index;
        await SelectedIndexChanged.InvokeAsync(SelectedIndex);
        
        if (isNewValue) item.Toggled(item.Name);
    }

    private bool IsToggled(int index)
    {
        return index == SelectedIndex;
    }
}