@using System.Runtime.InteropServices.JavaScript
@inject IJSRuntime JsRuntime

@code {
    protected ElementReference Reference { get; set; } = default!;
    protected IJSObjectReference Module { get; private set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        Module = await JsRuntime.InvokeAsync<IJSObjectReference>("import", "./Shared/BaseComponents/ComplexComponent.razor.js");
        await base.OnInitializedAsync();
    }

    protected void CapturePointer(long pointerId)
    {
        Module.InvokeVoidAsync("capturePointer", Reference, pointerId);
    }

    protected void ReleasePointer(long pointerId)
    {
        Module.InvokeVoidAsync("releasePointer", Reference, pointerId);
    }
}